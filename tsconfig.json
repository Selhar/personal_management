{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
  "compilerOptions": {
      "allowJs": true,
      "allowUnreachableCode": false,
      "alwaysStrict": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "pretty": true,
      "strict": true,
    },
}